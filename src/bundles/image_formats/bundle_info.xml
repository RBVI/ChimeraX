<BundleInfo name="ChimeraX-ImageFormats" version="1.2"
	    package="chimerax.image_formats"
  	    minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>Support for saving images</Synopsis>
  <Description>Support for saving images</Description>

  <Categories>
    <Category name="I/O"/>
  </Categories>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.0"/>
    <Dependency name="ChimeraX-DataFormats" version="~=1.0"/>
    <Dependency name="ChimeraX-SaveCommand" version="~=1.0"/>
  </Dependencies>

  <Providers manager="data formats">
    <Provider name="Bitmap image" synopsis="BMP image" nicknames="bmp" category="Image" suffixes=".bmp"
		reference_url="https://en.wikipedia.org/wiki/BMP_file_format" />
    <Provider name="Graphics Interchange Format" synopsis="GIF image" nicknames="gif" category="Image"
		suffixes=".gif" default_for=".gif" reference_url="https://en.wikipedia.org/wiki/GIF" />
    <Provider name="Joint Photographic Experts Group image" synopsis="JPEG image" nicknames="jpeg"
		category="Image" suffixes=".jpg,.jpeg" default_for=".jpg"
		reference_url="https://en.wikipedia.org/wiki/JPEG" />
    <Provider name="Portable Network Graphics" synopsis="PNG image" nicknames="png" category="Image"
		suffixes=".png" default_for=".png"
		reference_url="https://en.wikipedia.org/wiki/Portable_Network_Graphics" />
    <Provider name="Portable Pixmap format" synopsis="PPM image" nicknames="ppm" category="Image"
		suffixes=".ppm" reference_url="https://en.wikipedia.org/wiki/Netpbm" />
    <Provider name="Tagged Image File format" synopsis="TIFF image" nicknames="tiff" category="Image"
		suffixes=".tif,.tiff" default_for=".tif,.tiff" reference_url="https://en.wikipedia.org/wiki/TIFF" />
    <Provider name="photo" category="Image" suffixes=".jpg"
		reference_url="https://en.wikipedia.org/wiki/JPEG" />
  </Providers>

  <Providers manager="save command">
    <Provider name="Bitmap image" />
    <Provider name="Graphics Interchange Format" />
    <Provider name="Joint Photographic Experts Group image" />
    <Provider name="Portable Network Graphics" />
    <Provider name="Portable Pixmap format" />
    <Provider name="Tagged Image File format" />
  </Providers>

  <Providers manager="open command">
    <Provider name="photo" want_path="true" />
  </Providers>


  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
  </Classifiers>

</BundleInfo>
