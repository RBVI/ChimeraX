<BundleInfo name="ChimeraX-NIHPresets" version="1.0.3" package="chimerax.nih_presets"
            minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>NIH3D presets</Synopsis>
  <Description>Preset for NIH3D pipeline, useful for 3D printing</Description>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="Depiction"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.3"/>
    <Dependency name="ChimeraX-PresetMgr" version="~=1.0"/>
  </Dependencies>

  <Providers manager="presets">
    <Provider category="NIH3D" name="ribbon by secondary structure"/>
    <Provider category="NIH3D" name="ribbon by secondary structure (printable)"/>
    <Provider category="NIH3D" name="ribbon rainbow"/>
    <Provider category="NIH3D" name="ribbon rainbow (printable)"/>
    <Provider category="NIH3D" name="ribbon by chain"/>
    <Provider category="NIH3D" name="ribbon by chain (printable)"/>
    <Provider category="NIH3D" name="ribbon by polymer (printable)"/>
    <Provider category="NIH3D" name="ribbon monochrome (printable)"/>
    <Provider category="NIH3D" name="surface monochrome"/>
    <Provider category="NIH3D" name="surface coulombic"/>
    <Provider category="NIH3D" name="surface hydrophobicity"/>
    <Provider category="NIH3D" name="surface by chain"/>
    <Provider category="NIH3D" name="surface blob by chain"/>
    <Provider category="NIH3D" name="surface blob by polymer"/>
    <Provider category="NIH3D" name="sticks"/>
    <Provider category="NIH3D" name="sticks (printable)"/>
    <Provider category="NIH3D" name="sticks monochrome (printable)"/>
    <Provider category="NIH3D" name="CPK"/>
    <Provider category="NIH3D" name="CPK monochrome"/>
    <Provider category="NIH3D" name="ball and stick"/>
    <Provider category="NIH3D" name="ball and stick monochrome"/>
    <Provider category="NIH3D" name="volume white"/>
    <Provider category="NIH3D" name="volume radial"/>
    <Provider category="NIH3D" name="volume monochrome"/>
  </Providers>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
  </Classifiers>

</BundleInfo>
