<BundleInfo name="ChimeraX-BuildStructure" version="2.10.4" package="chimerax.build_structure"
  	    customInit="true" minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Create/modify structures</Synopsis>
  <Description>Create/modify atomic structures</Description>

  <DataFiles>
  	<DataDir>fragments</DataDir>
  	<DataDir>nuc-data</DataDir>
  </DataFiles>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="Structure Analysis"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.2"/>
    <Dependency name="ChimeraX-AddH" version="~=2.0"/>
    <Dependency name="ChimeraX-Atomic" version="~=1.44"/>
    <Dependency name="ChimeraX-AtomSearch" version="~=2.0"/>
    <Dependency name="ChimeraX-BondRot" version="~=2.0"/>
    <Dependency name="ChimeraX-Geometry" version="~=1.0"/>
	<Dependency name="ChimeraX-RotamerLibMgr" version="~=3.0"/>
    <Dependency name="ChimeraX-StdCommands" version="~=1.11"/>
    <Dependency name="ChimeraX-SwapRes" version="~=2.0"/>
    <Dependency name="ChimeraX-UI" version="~=1.13"/>
  </Dependencies>

  <Managers>
    <Manager name="start structure" autostart="false"/>
    <Manager name="start structure fragments" autostart="false"/>
  </Managers>

  <Providers manager="start structure">
    <Provider name="atom"/>
    <Provider name="fragment"/>
    <Provider name="nucleic" ui_name="nucleic double helix" auto_style="false" />
    <Provider name="peptide"/>
  </Providers>

  <Providers manager="start structure fragments">
    <Provider name="acridine" category="fused 6+6+6 member rings"/>
    <Provider name="anthracene" category="fused 6+6+6 member rings"/>
    <Provider name="benzcisoxazole" category="fused 6+5 member rings"/>
    <Provider name="benzdisoxazole" category="fused 6+5 member rings"/>
    <Provider name="benzene" category="6-member rings"/>
    <Provider name="benzimidazole" category="fused 6+5 member rings"/>
    <Provider name="benzocthiophene" category="fused 6+5 member rings"/>
    <Provider name="benzofuran" category="fused 6+5 member rings"/>
    <Provider name="benzothiazole" category="fused 6+5 member rings"/>
    <Provider name="benzothiophene" category="fused 6+5 member rings"/>
    <Provider name="benzoxazole" category="fused 6+5 member rings"/>
    <Provider name="cinnoline" category="fused 6+6 member rings"/>
    <Provider name="furan" category="5-member rings"/>
    <Provider name="imidazole" category="5-member rings"/>
    <Provider name="indazole" category="fused 6+5 member rings"/>
    <Provider name="indole" category="fused 6+5 member rings"/>
    <Provider name="isobenzofuran" category="fused 6+5 member rings"/>
    <Provider name="isoindole" category="fused 6+5 member rings"/>
    <Provider name="isoquinoline" category="fused 6+6 member rings"/>
    <Provider name="isoxazole" category="5-member rings"/>
    <Provider name="naphthalene" category="fused 6+6 member rings"/>
    <Provider name="oxazole" category="5-member rings"/>
    <Provider name="purine" category="fused 6+5 member rings"/>
    <Provider name="pyrazine" category="6-member rings"/>
    <Provider name="pyrazole" category="5-member rings"/>
    <Provider name="pyridazine" category="6-member rings"/>
    <Provider name="pyridine" category="6-member rings"/>
    <Provider name="pyrimidine" category="6-member rings"/>
    <Provider name="pyrrole" category="5-member rings"/>
    <Provider name="quinazoline" category="fused 6+6 member rings"/>
    <Provider name="quinoline" category="fused 6+6 member rings"/>
    <Provider name="quinoxaline" category="fused 6+6 member rings"/>
    <Provider name="thiazole" category="5-member rings"/>
    <Provider name="thiophene" category="5-member rings"/>
  </Providers>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>Command :: build :: Structure Analysis :: Create/modify structures</ChimeraXClassifier>
    <ChimeraXClassifier>Command :: bond :: Structure Analysis :: Create bond(s)</ChimeraXClassifier>
    <ChimeraXClassifier>Command :: ~bond :: Structure Analysis :: Remove bond(s)</ChimeraXClassifier>
    <ChimeraXClassifier>Command :: bond length :: Structure Analysis :: change bond length(s)</ChimeraXClassifier>
    <ChimeraXClassifier>Tool :: Build Structure :: Structure Editing :: Create/modify structures</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
