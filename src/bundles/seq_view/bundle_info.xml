<BundleInfo name="ChimeraX-SeqView" version="2.4.6"
	    package="chimerax.seq-view"
	    supercedes="ChimeraX-SEQ-VIEW"
  	    minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>Sequence viewer</Synopsis>
  <Description>Sequence/alignment viewer.</Description>

  <Categories>
    <Category name="Sequence"/>
  </Categories>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.3dev2021"/>
    <Dependency name="ChimeraX-Alignments" version="~=2.0"/>
    <Dependency name="ChimeraX-AlignmentHdrs" version="~=3.0"/>
    <Dependency name="ChimeraX-Atomic" version="~=1.10"/>
    <Dependency name="ChimeraX-Geometry" version="~=1.0"/>
    <Dependency name="ChimeraX-UI" version="~=1.0"/>
  </Dependencies>

  <Providers manager="alignments">
	<!-- subcommand_name also defined in __init__.py and used in various other .py files -->
    <Provider name="seqview" synonyms="sv,view" subcommand_name="viewer" type="viewer"/>
  </Providers>


  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
  </Classifiers>

</BundleInfo>
