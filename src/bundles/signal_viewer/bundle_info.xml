<BundleInfo name="ChimeraX-SignalViewer" version="1.0.1"
	    package="chimerax.signal_viewer"
  	    minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>Display time varying signals at points in space</Synopsis>
  <Description>Display time varying signals at points in space read from numpy NPZ files.</Description>

  <Categories>
    <Category name="Generic 3D objects"/>
  </Categories>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.0"/>
    <Dependency name="ChimeraX-UI" version="~=2.0"/>
    <Dependency name="ChimeraX-DataFormats" version="~=1.0"/>
    <Dependency name="ChimeraX-OpenCommand" version="~=1.0"/>
  </Dependencies>

  <Providers manager="data formats">
    <Provider name="Signal time series" nicknames="signal" suffixes=".npz"
		category="Generic 3D objects" />
  </Providers>

  <Providers manager="open command">
    <Provider name="Signal time series" want_path="true" />
  </Providers>

  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>Command :: signal :: Higher-Order Structure :: show signals and points in space</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
