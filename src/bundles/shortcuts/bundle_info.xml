<?xml version="1.0"?>
<BundleInfo name="ChimeraX-Shortcuts" version="1.2.0" package="chimerax.shortcuts" minSessionVersion="1" maxSessionVersion="1">
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>
  <Synopsis>Button and keyboard shortcuts</Synopsis>
  <Description>Provide button and keyboard shortcuts for common commands.</Description>
  <DataFiles>
    <DataFile>icons/*.png</DataFile>
    <DataFile>icons/*.svg</DataFile>
  </DataFiles>
  <Categories>
    <Category name="Toolbar"/>
  </Categories>
  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.3dev2021"/>
    <Dependency name="ChimeraX-Geometry" version="~=1.0"/>
    <Dependency name="ChimeraX-Graphics" version="~=1.0"/>
    <Dependency name="ChimeraX-MapFit" version="~=2.0"/>
    <Dependency name="ChimeraX-UI" version="~=1.0"/>
  </Dependencies>
