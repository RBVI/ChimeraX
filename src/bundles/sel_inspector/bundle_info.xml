<BundleInfo name="ChimeraX-SelInspector" version="1.0" package="chimerax.sel_inspector"
  	    minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Inspect contents of selection</Synopsis>
  <Description>Inspect/change attributes of current selection</Description>

  <DataFiles>
    <DataFile>icons/*.png</DataFile>
  </DataFiles>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="General Controls"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.2"/>
    <Dependency name="ChimeraX-UI" version="~=1.8"/>
    <Dependency name="ChimeraX-ItemsInspection" version="~=1.0"/>
  </Dependencies>

  <Providers manager="toolbar">
    <Provider tab="Extras" section="Selection" hidden="true" name="selection inspector"
      display_name="Inspect" icon="magnifying-glass.png" description="Inspect current selection"/>
  </Providers>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>Tool :: Selection Inspector :: General :: inspect selection contents</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
