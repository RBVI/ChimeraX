    <ChimeraXClassifier>Open :: MSF :: msf :: true :: alignment:Bool,auto_associate:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: PIR :: pir :: true :: alignment:Bool,auto_associate:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: ALN :: clustal :: true :: alignment:Bool,auto_associate:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: HSSP :: hssp :: true :: alignment:Bool,auto_associate:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: Pfam :: selex :: true :: alignment:Bool,auto_associate:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: RSF :: rsf :: true :: alignment:Bool,auto_associate:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: Stockholm :: stockholm :: true :: alignment:Bool,auto_associate:Bool</ChimeraXClassifier>
