<BundleInfo name="ChimeraX-ViewDockX" version="0.1"
	    package="chimerax.viewdockx"
  	    minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>View docking results</Synopsis>
  <Description>Display docking results as structures and table.

UCSF DOCK output in PDB and mol2 formats are supported.
  </Description>

  <DataFiles>
    <DataDir>lib</DataDir>
    <DataDir>docs</DataDir>
    <DataFile>viewdockx_*.html</DataFile>
    <DataFile>viewdockx_*.js</DataFile>
    <DataFile>viewdockx_*.css</DataFile>
  </DataFiles>

  <!--
  For testing only
  <ExtraFiles>
    <ExtraFile source="bundle_info.xml">bundle_info.xml</ExtraFile>
    <ExtraDir source="flotsrc">lib/flotsrc</ExtraDir>
  </ExtraFiles>
  -->

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="General"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.9"/>
    <Dependency name="ChimeraX-Atomic" version=">=1.0"/>
    <Dependency name="ChimeraX-Mol2" version=">=1.0"/>
    <Dependency name="ChimeraX-UI" version=">=1.0"/>
  </Dependencies>

  <Providers manager="url_schemes">
    <Provider name="vdxchart"/>
    <Provider name="vdxplot"/>
    <Provider name="vdxtable"/>
  </Providers>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>Tool :: ViewDockX :: General :: display docking results</ChimeraXClassifier>
    <ChimeraXClassifier>Command :: viewdockx :: General :: Display docking results</ChimeraXClassifier>
    <ChimeraXClassifier>Command :: viewdockx down :: General :: Simulate down-arrow key in ViewDockX</ChimeraXClassifier>
    <ChimeraXClassifier>Command :: viewdockx up :: General :: Simulate up-arrow key in ViewDockX</ChimeraXClassifier>
    <ChimeraXClassifier>DataFormat :: mol2 :: :: Molecule structure :: .mol2 :: :: :: :: :: mol2 format :: utf-8</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: mol2 :: mol2 ::</ChimeraXClassifier>
    <ChimeraXClassifier>DataFormat :: pdbqt :: :: Molecule structure :: .pdbqt :: :: :: :: :: pdbqt format :: utf-8</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: pdbqt :: pdbqt ::</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
