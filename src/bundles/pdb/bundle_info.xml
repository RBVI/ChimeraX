<BundleInfo name="ChimeraX-PDB" version="1.0"
	    package="chimerax.atomic.pdb" purePython="false"
		installedIncludeDir="include" installedLibraryDir="lib"
  	    minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>PDB format read/write</Synopsis>
  <Description>This bundle provides the abiility to fetch and read PDB files.</Description>

  <Categories>
    <Category name="Molecular structure"/>
  </Categories>

  <CLibrary name="pdbconnect">
    <SourceFile>connect_cpp/connect.cpp</SourceFile>
	<Library>atomstruct</Library>
    <Library>element</Library>
    <Library>pyinstance</Library>
  </CLibrary>

  <ExtraFiles>
    <ExtraFile source="connect_cpp/connect.h">include/pdb/connect.h</ExtraFile>
    <ExtraFile source="connect_cpp/imex.h">include/pdb/imex.h</ExtraFile>
  </ExtraFiles>

  <CModule name="_pdbio">
    <SourceFile>pdbio_cpp/PDBio.cpp</SourceFile>
    <IncludeDir>pdb_cpp/include</IncludeDir>
    <IncludeDir>src/include</IncludeDir>
    <LibraryDir>pdb_cpp/lib</LibraryDir>
    <LibraryDir>src/lib</LibraryDir>
    <Library>atomstruct</Library>
    <Library>element</Library>
    <Library>pyinstance</Library>
    <Library>logger</Library>
    <Library>pdb</Library>
    <Library>pdbconnect</Library>
    <Library>arrays</Library>
    <Library>appdirs</Library>
  </CModule>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.9"/>
    <Dependency name="ChimeraX-Atomic" version=">=1.0"/>
  </Dependencies>

  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>DataFormat :: PDB :: :: Molecular structure :: .pdb,.pdb1,.ent,.pqr :: :: http://www.wwpdb.org/documentation/file-format :: :: :: Protein Databank Format (PDB)</ChimeraXClassifier>
    <ChimeraXClassifier>Fetch :: pdb :: PDB :: :: 1a0m ::</ChimeraXClassifier>
    <ChimeraXClassifier>Fetch :: pdbe :: PDB :: :: 1a0m ::</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: PDB :: PDB :: false :: coordsets:Bool,auto_style:Bool,atomic:Bool,max_models:Int,log_info:Bool,combine_sym_atoms:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>Save :: PDB :: PDB :: false :: models:Models,selected_only:Bool,displayed_only:Bool,all_coordsets:Bool,pqr:Bool,rel_model:Model,serial_numbering:SerialNumbering</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
