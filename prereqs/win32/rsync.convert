#!/bin/bash
# Generic wrapper for commands that need different style paths
# For example: for rsync, name this program rsync.convert
PROG=`basename "$0" .convert`
CYGPATH_TYPE=-u
declare -a ARGS
ARGS=("$@")
for ((i = 0; i < $#; ++i))
do
	# skip arg if it starts with -
	if [[ ! ( "${ARGS[$i]}" =~ ^- ) ]]
	then
		ARGS[$i]=`cygpath $CYGPATH_TYPE "${ARGS[$i]}"`
	fi
done
$PROG "${ARGS[@]}"
